<h1>みんなの記録一覧</h1>
<table class="table table-hover">
  <thead>
  <tr>
    <th>日付</th>
    <th>ユーザー</th>
    <th>コメント</th>
    <th>習得した言語・要素</th>
  </tr>
  </thead>
  <tbody>
  <% @records.each do |r| %>
    <tr>
      <td><%= r.r_date %></td>
      <td><%= r.user.name %></td>
      <td><%= r.comment %></td>
      <td>
        <% r.record_elems.each do |re| %>
          <%= re.elem.lang.name %>
          <%= re.elem.name %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>