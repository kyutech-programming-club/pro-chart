<h1>記録投稿</h1>
<div class="form-group">
  <%= form_with model: @record, local: true do |f| %>
    <%= inform_validation_error @record %>
    <%= f.label "日付" %>
    <%= f.date_select :r_date, class: "form-control" %><br>

    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %><br>

    <h3>言語・要素選択</h3>
    <% @langs.each do |lang|%>
      <h4><%= lang.name %></h4>
      <div class="col-md-4 checkbox-list">
        <%= collection_check_boxes(:group,:elem_ids, Elem.where(lang_id: lang.id), :id, :name, include_hidden: false) %>
      </div>
      <%= text_field :elem, "#{lang.id}_name", class: "form-control", placeholder: "新規の要素" %>
      <hr>
    <% end %>
    <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
  <% end %>
</div>