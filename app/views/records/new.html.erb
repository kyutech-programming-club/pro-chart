<h1>Records#new</h1>
<%= form_with model: @record do |f| %>
  <%= f.label :r_date %>
  <%= f.date_select :r_date, class: "form-control"%>
  <%= f.label :comment%>
  <%= f.text_area :comment, class: "form-control"%>
  <% @langs.each do |lang|%>
    <%= lang.name%><br>
    <%= collection_check_boxes(:group,:elem_ids, Elem.where(lang_id: lang.id), :id, :name, include_hidden: false)%><hr>
  <% end %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>