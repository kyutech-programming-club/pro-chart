<%= @lang.name %>

<% if current_user %>
  <%= link_to "追加", new_lang_elem_path(@lang, @elems) %>
<% end %>

<% @elems.each do |elem| %>
   <br>
  <%= link_to elem.name, lang_elem_path(@lang, elem) %>
<% end %>


<% if current_user && current_user.admin? %>
  |  <%= link_to "削除", lang_path(@lang), method: :delete,
                 data: { confirm: "本当に削除しますか？" } %>
  または  <%= link_to "編集", edit_lang_path(@lang) %>
<% end %>
