<% @langs.each do |lang| %>
  <%= link_to lang.name, lang_path(lang) %>
  <% if current_user %>
    <% if current_user.admin? %>
      |  <%= link_to "削除", lang, method: :delete,
                    data: { confirm: "本当に削除しますか？" } %>
       または  <%= link_to "編集", edit_lang_path(lang) %>
    <% end %>
  <% end %>
  <br>
<% end %>