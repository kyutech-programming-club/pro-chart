<h1>言語一覧</h1>

<%= link_to "新規登録", new_lang_path, class: "btn btn-primary" %>

<table class="table table-hover">
  <thead>
  <tr>
    <th>言語名</th>
    <th>要素数</th>
  </tr>
  </thead>
  <tbody>
  <% @langs.each do |lang| %>
    <tr>
      <td><%= link_to lang.name, lang_path(lang) %></td>
      <td><%= lang.elems.count %></td>
    </tr>
  <% end %>
  </tbody>
</table>